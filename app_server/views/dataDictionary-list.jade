extends layout

block content

  +nav("Service Registry", "dropdown_menu")
    +nav_item( "/" ) Home
    +nav_item( "/services" ) Services
    +nav_item( "/referenceData/categories" ) Reference Data
    +nav_item( "/applications" ) Applications
    +nav_item( "/dataDictionary", "active" ) API Data Dictionary
    +nav_item( "contact.html" ) Contact
    form(role='search', action='/dataDictionary/searchByName', method='get').navbar-form.navbar-right
      div.form-group
        input(type='text',placeholder='Search', name='name').form-control
      | &nbsp;
      button(type='submit').btn.btn-default Search
  .row.page-header: .col-lg-12
      h1= pageHeader.title
      p THIS IS A POC - DO NOT REFERENCE
  .row
    .col-xs-12.col-md-12
      .row
        .col-xs-12.col-sm-11
          div(class="table-responsive")
            table(class="table table-striped table-bordered")
              thead
                tr
                  th Name
                  th Unqualified Name
                  th Description
                  th Data Type
                  th Format
                  th Values
                  th Lifecycle Status
                  th Resources
                  th API Type
              tbody
                each item in dataDictionaryItems
                  tr
                    td
                      a(href="/dataDictionary/#{item.id}")= item.qualifiedName
                    td #{item.unqualifedName}
                    td #{item.description}
                    td #{item.type}
                    td #{item.typeFormat}
                    td #{item.enum}
                    td.success #{item.lifecycleStatus}
                    td #{item.resource}
                    td #{item.apiType}
    .col-xs-12.col-md-3
      p.lead Copyright 2016 Jim Walker / WBC
      p= sidebar.callToAction